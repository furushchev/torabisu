{
  "name": "Torabisu",
  "version": "1.0.1",
  "description": "Enhanced Travis-CI Browsing Extension for Google Chrome",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://s3.amazonaws.com/archive.travis-ci.org/jobs/*/log.txt"],
      "js": ["js/jquery.min.js", "js/ansi_up.js", "js/travis.js"]
    },
    {
      "matches": ["https://github.com/*/*"],
      "js": ["js/jquery.min.js", "js/github.js"]
    }
  ],
  "icons": {
    "128": "img/icon.png"
  },
  "permissions": [
    "tabs",
    "https://travis-ci.org/*",
    "https://api.travis-ci.org/*"
  ]
}
